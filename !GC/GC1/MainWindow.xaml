<Window x:Class="GC1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GC1"
        mc:Ignorable="d"
        Title="Diablo" Width="1360" Height="768" WindowState="Normal" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" ShowInTaskbar="True" Icon="\images\DiaboIcon.png">
    <Window.Background>
        <ImageBrush ImageSource="/images/BackMenu.png" Stretch="Fill"/>
    </Window.Background>
    <Grid Height="768" Width="1360">
        <Button x:Name="exit_Button" Content="Exit" Height="84" Width="216" Click="Exit_Button_Click" Margin="0,431,0,0" RenderTransformOrigin="0.512,0.276" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="24"/>
        <Button x:Name="createCharacter_Button" Content="Create character" Height="84" Width="216" Click="CreateCharacter_Button_Click" RenderTransformOrigin="0.512,0.276" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24"/>
    </Grid>
</Window>
